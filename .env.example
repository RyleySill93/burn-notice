# Database (Railway provides these automatically when you add PostgreSQL plugin)
DATABASE_URL=postgresql://user:password@host:5432/railway

# Redis (Railway provides this automatically when you add Redis plugin)
REDIS_URL=redis://default:password@host:6379

# JWT Secret (generate a random string)
JWT_SECRET=your-secret-key-here

# Slack (optional, for posting leaderboards)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Frontend URL (set after deploying frontend)
FRONTEND_URL=https://your-frontend.up.railway.app

# Environment
ENVIRONMENT=production
