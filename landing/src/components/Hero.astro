---
const appUrl = 'https://app.burnnotice.cc';
---

<section class="relative min-h-screen flex items-center justify-center pt-16 bg-grid bg-radial-orange overflow-hidden">
  <div class="mx-auto max-w-6xl px-6 py-24 text-center">
    <!-- Badge -->
    <div class="opacity-0 animate-fade-in-up mb-8">
      <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-surface-border bg-surface-card text-sm text-neutral-300">
        <span class="w-2 h-2 rounded-full bg-brand-orange animate-pulse"></span>
        Built for teams using Claude Code
      </span>
    </div>

    <!-- Headline -->
    <h1 class="opacity-0 animate-fade-in-up-delay-1 font-bangers text-5xl sm:text-6xl md:text-7xl tracking-wide leading-tight mb-6">
      See who's
      <span class="text-brand-orange text-glow-orange">burning</span>
      the most tokens.
    </h1>

    <!-- Subheadline -->
    <p class="opacity-0 animate-fade-in-up-delay-2 text-lg sm:text-xl text-neutral-400 max-w-2xl mx-auto mb-10 leading-relaxed">
      Real-time leaderboards, usage analytics, and GitHub metrics for engineering teams using AI coding assistants.
    </p>

    <!-- CTAs -->
    <div class="opacity-0 animate-fade-in-up-delay-2 flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href={`${appUrl}/signup`}
        class="inline-flex items-center px-8 py-3 rounded-lg bg-brand-orange text-white font-semibold text-lg hover:bg-orange-600 transition-colors shadow-lg shadow-orange-500/20"
      >
        Start Tracking
      </a>
      <a
        href="#dashboard-preview"
        class="inline-flex items-center px-8 py-3 rounded-lg border border-surface-border text-neutral-300 font-semibold text-lg hover:border-neutral-500 hover:text-white transition-colors"
      >
        See a Demo
      </a>
    </div>

    <!-- Floating Screenshot -->
    <div class="mt-16 mx-auto max-w-4xl opacity-0 animate-fade-in-up-delay-2">
      <div class="animate-float animate-glow-pulse rounded-xl overflow-hidden border border-surface-border" style="perspective: 1000px;">
        <!-- Browser Chrome -->
        <div class="bg-surface-card border-b border-surface-border px-4 py-3 flex items-center gap-2">
          <div class="flex gap-1.5">
            <div class="w-3 h-3 rounded-full bg-red-500/70"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/70"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/70"></div>
          </div>
          <div class="flex-1 mx-4">
            <div class="bg-surface-bg rounded-md px-3 py-1 text-xs text-neutral-500 text-center">
              app.burnnotice.cc/dashboard
            </div>
          </div>
        </div>
        <!-- Dashboard Content -->
        <div class="bg-surface-bg p-6">
          <!-- Stat Cards Row -->
          <div class="grid grid-cols-3 gap-4 mb-6">
            <div class="bg-surface-card rounded-lg border border-surface-border p-4">
              <div class="text-xs text-neutral-500 mb-1">Today</div>
              <div class="text-2xl font-bold text-white">847K</div>
              <div class="text-xs text-brand-green flex items-center gap-1 mt-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17l9.2-9.2M17 17V7H7"/></svg>
                +23%
              </div>
            </div>
            <div class="bg-surface-card rounded-lg border border-surface-border p-4">
              <div class="text-xs text-neutral-500 mb-1">This Week</div>
              <div class="text-2xl font-bold text-white">4.2M</div>
              <div class="text-xs text-brand-green flex items-center gap-1 mt-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17l9.2-9.2M17 17V7H7"/></svg>
                +12%
              </div>
            </div>
            <div class="bg-surface-card rounded-lg border border-surface-border p-4">
              <div class="text-xs text-neutral-500 mb-1">This Month</div>
              <div class="text-2xl font-bold text-white">18.7M</div>
              <div class="text-xs text-brand-green flex items-center gap-1 mt-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17l9.2-9.2M17 17V7H7"/></svg>
                +8%
              </div>
            </div>
          </div>
          <!-- Leaderboard -->
          <div class="bg-surface-card rounded-lg border border-surface-border">
            <div class="px-4 py-3 border-b border-surface-border flex items-center justify-between">
              <span class="text-sm font-semibold text-white">Leaderboard</span>
              <span class="text-xs text-neutral-500">Today</span>
            </div>
            <div class="divide-y divide-surface-border">
              <div class="px-4 py-3 flex items-center gap-3">
                <span class="w-6 h-6 rounded-full bg-yellow-500/20 text-yellow-500 text-xs font-bold flex items-center justify-center">1</span>
                <span class="text-sm text-white flex-1">Sarah Chen</span>
                <span class="text-sm font-mono text-brand-orange">284K</span>
              </div>
              <div class="px-4 py-3 flex items-center gap-3">
                <span class="w-6 h-6 rounded-full bg-neutral-400/20 text-neutral-400 text-xs font-bold flex items-center justify-center">2</span>
                <span class="text-sm text-white flex-1">Jake Martinez</span>
                <span class="text-sm font-mono text-brand-orange">241K</span>
              </div>
              <div class="px-4 py-3 flex items-center gap-3">
                <span class="w-6 h-6 rounded-full bg-amber-700/20 text-amber-600 text-xs font-bold flex items-center justify-center">3</span>
                <span class="text-sm text-white flex-1">Priya Patel</span>
                <span class="text-sm font-mono text-brand-orange">198K</span>
              </div>
              <div class="px-4 py-3 flex items-center gap-3">
                <span class="w-6 h-6 rounded-full bg-neutral-700 text-neutral-400 text-xs font-bold flex items-center justify-center">4</span>
                <span class="text-sm text-white flex-1">Alex Kim</span>
                <span class="text-sm font-mono text-brand-orange">156K</span>
              </div>
              <div class="px-4 py-3 flex items-center gap-3">
                <span class="w-6 h-6 rounded-full bg-neutral-700 text-neutral-400 text-xs font-bold flex items-center justify-center">5</span>
                <span class="text-sm text-white flex-1">Jordan Liu</span>
                <span class="text-sm font-mono text-brand-orange">132K</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
